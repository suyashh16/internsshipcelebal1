def lower_triangle(rows):
    for i in range(1, rows + 1):
        print("* " * i)

def upper_triangle(rows):
    for i in range(rows, 0, -1):
        print("* " * i)

def pyramid(rows):
    for i in range(1, rows + 1):
        print(" " * (rows - i) + "* " * i)

rows = int(input("Enter the number of rows for the patterns: "))

print("\nLower Triangle:")
lower_triangle(rows)

print("\nUpper Triangle:")
upper_triangle(rows)

print("\nPyramid:")
pyramid(rows)
